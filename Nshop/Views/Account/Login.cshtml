@model Nshop.ViewModels.LoginViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link href="~/css/Logincss.css" type="text/css" rel="stylesheet" />
</head>
<body>
    <div id="login">

        <h1><strong>Welcome.</strong> Please login.</h1>

        <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <fieldset>
                <div>
                    <p><input asp-for="Email" type="text" required placeholder="Email"></p>
                    <span asp-validation-for="Email"></span>
                </div>
                <div>
                    <p><input asp-for="Password" type="password" required placeholder="Password"></p>
                    <span asp-validation-for="Password"></span>
                </div>

                <div>
                    <label asp-for="RememberMe"></label>
                    <input asp-for="RememberMe" />
                    <span asp-validation-for="RememberMe"></span>

                </div>
                <p><a href="#">Forgot Password?</a></p>

                <p><input type="submit" value="Login"></p>

            </fieldset>

        </form>

        <p><span class="btn-round">or</span></p>

        <p>

            <a class="facebook-before"><span class="fontawesome-facebook"></span></a>
            <button class="facebook">Login Using Facbook</button>

        </p>

        <p>

            <a class="twitter-before"><span class="fontawesome-twitter"></span></a>
            <button class="twitter">Login Using Twitter</button>

        </p>

    </div>
</body>
</html>
